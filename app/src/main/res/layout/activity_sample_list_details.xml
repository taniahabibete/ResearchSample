<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_height"
            android:id="@+id/recipe_image"
            android:background="@drawable/thesisappslogo"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/recipe_title_text_size"
            android:textColor="#000"
            android:id="@+id/sample_title"
            android:padding="7dp"
            android:layout_below="@+id/recipe_image"
            android:text="Sample Title"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/sample_title"
            android:id="@+id/container"
            android:padding="5dp">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textColor="@color/colorAccent"
                android:id="@+id/uploaddate"
                android:gravity="center"
                android:text=" "/>

            <Button
                android:id="@+id/view_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="View" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/container"
            android:id="@+id/ingredients_container">
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/developer"
                android:text="Developed By"/>
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/projecttype"
                android:text="Projct Type"/>
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/department"
                android:text="Department"/>
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/userType"/>
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/patternType"/>
            <include layout="@layout/item_divider" />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_publisher_text_size"
                android:textStyle="italic"
                android:id="@+id/sampleDescription"
                android:text="Sample Description"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>



